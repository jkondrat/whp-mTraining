<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             version="1.0">
    <persistence-unit name="mtraining-entity-manager">
        <class>org.motechproject.whp.mtraining.domain.Provider</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.ProgressDialect"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/whp"/>
            <property name="hibernate.connection.username" value="sroy"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
        </properties>
    </persistence-unit>
</persistence>